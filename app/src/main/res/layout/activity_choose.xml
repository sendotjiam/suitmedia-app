<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ChooseActivity"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextTitleBlack"
            android:text="@string/nama"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextTitleBlack"
            tools:text="Sendo"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btn_choose_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pilih_event"
            android:textAllCaps="false"
            android:onClick="moveToEvent"
            style="@style/TextButton"
            android:backgroundTint="@color/gold"/>

        <Button
            android:id="@+id/btn_choose_guest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pilih_guest"
            android:textAllCaps="false"
            style="@style/TextButton"
            android:backgroundTint="@color/gold"
            android:onClick="moveToGuest"/>
    </LinearLayout>
</RelativeLayout>